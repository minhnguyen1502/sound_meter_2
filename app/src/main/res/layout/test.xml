<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Background of the table with rounded corners -->
    <LinearLayout
        android:id="@+id/tableBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/table_background"
        android:orientation="vertical">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FDF9A8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Header 1"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Header 2"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Header 3"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E3DB37" />

        <!-- Data Rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#283444">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 1"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 2"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 3"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Repeat the Divider and Data Rows for the remaining rows -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E3DB37" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#283444">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 4"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 5"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#E3DB37" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Data 6"
                android:textColor="@android:color/white"
                android:gravity="center" />
        </LinearLayout>

        <!-- Repeat the above structures for remaining rows -->
        <!-- Add more rows as needed with the same structure -->

    </LinearLayout>
</RelativeLayout>
